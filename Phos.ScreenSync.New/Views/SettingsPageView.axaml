<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Phos.ScreenSync.New.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Phos.ScreenSync.New.Views.SettingsPageView"
             x:DataType="vm:SettingsPageViewModel">
    <StackPanel Margin="20">
        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="WebSocket URL:"/>
        <TextBox Text="{Binding UserSettings.WebSocketUrl}" Margin="0,0,0,10"/>
        <CheckBox Content="Auto Connect" IsChecked="{Binding UserSettings.AutoConnect}" Margin="0,0,0,20"/>
        <TextBlock Text="Available Rooms:"/>
        <ListBox ItemsSource="{Binding AvailableRooms}" Margin="0,0,0,20" SelectionMode="Multiple" SelectedItems="{Binding SelectedRooms}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Right"/>
    </StackPanel>
</UserControl>
